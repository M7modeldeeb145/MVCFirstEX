@model List<Doctor>
<h1>Book an Appointment</h1>

<div class="card-container d-flex flex-wrap justify-content-around">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mb-3" style="width: 25rem;">
            <img src="/images/doctor@(i+1).jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model[i].Name</h5>
                <p class="card-text">@Model[i].Specialization</p>
                <a href="/AddAppointment/Index?DrName=@Model[i].Name" class="btn btn-primary">Book an Appointment</a>
            </div>
        </div>
    }
</div>